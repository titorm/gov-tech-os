{
  "name": "api",
  "version": "1.0.0",
  "description": "NestJS API with Fastify, Drizzle ORM, and MongoDB",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "type-check": "tsc --noEmit",
    "db:push": "drizzle-kit push:pg",
    "db:generate": "drizzle-kit generate:pg",
    "db:studio": "drizzle-kit studio",
    "cleanup:refresh-tokens:dry": "node ../../scripts/cleanup_refresh_tokens.js --dry-run",
    "cleanup:refresh-tokens:perform": "node ../../scripts/cleanup_refresh_tokens.js",
    "cleanup:refresh-tokens:batched": "node ../../scripts/cleanup_refresh_tokens.js"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/websockets": "^11.1.6",
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/mongoose": "^11.0.3",
    "@fastify/helmet": "^13.0.1",
    "@fastify/cors": "^11.1.0",
    "drizzle-orm": "^0.44.5",
    "postgres": "^3.4.7",
    "mongoose": "^8.18.1",
    "cache-manager": "^7.2.0",
    "cache-manager-redis-yet": "^5.1.5",
    "jsonwebtoken": "^9.0.0",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "bcryptjs": "^3.0.2",
    "class-validator": "^0.14.2",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "@repo/types": "workspace:*"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@repo/eslint-config": "workspace:*",
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@types/jsonwebtoken": "^9.0.1",
    "drizzle-kit": "^0.31.5",
    "ts-node-dev": "^2.0.0",
    "jest": "^30.1.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@gov-tech/db(.*)$": "<rootDir>/../../../packages/db/src$1"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
