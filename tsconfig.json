{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@gov-tech/db": ["packages/db/src"],
      "@gov-tech/db/*": ["packages/db/src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["packages/**/*", "apps/**/*"]
}
